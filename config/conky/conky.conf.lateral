conky.config={
    update_interval=45,
    out_to_console=false,
    out_to_stderr=false,
	alignment='top_right',
	use_xft=true,

double_buffer=true,
background = true,
own_window = true,
own_window_class = 'Conky',
own_window_type = 'normal', -- normal /override /desktop /dock

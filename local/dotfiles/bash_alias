# Definiciones de alias
alias cd...='cd ../..'
alias ..='cd ..'
alias ...='cd ../..'
alias nnn='nnn -o'
alias cal="ncal -Mb"
alias hrb="hr ' '"
alias hr2="hr ' ' - ' '"
alias goto='. gotoaux'
alias b='. b $@'

#Evitando errores de tecleo
alias cd..='cd ..'
alias car='cat'

#ejemplo: pwd | c --> al portapapeles
alias c='xclip -sel clip'
alias p='xclip -o -sel clip'

#Eliminando dispositivos de loops de lsblk
alias lsblksinloop='lsblk -e 7'

#Copia la salida de una orden al portapapeles: pwd | copiar
alias copiar='xclip -selection clipboard'
alias pegar='xclip -selection clipboard -out'
